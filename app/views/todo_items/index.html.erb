<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><%= link_to 'Show', todo_item, class:"btn btn-success active"%></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item), class:"btn btn-warning active"%></td>
        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger active" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_todo_item_path, class:"btn btn-primary active"%>
